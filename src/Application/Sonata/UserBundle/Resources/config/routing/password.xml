<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="managePass" path="/">
        <default key="_controller">ApplicationSonataUserBundle:Password:index</default>
    </route>

    <route id="managePass_show" path="/{id}/show">
        <default key="_controller">ApplicationSonataUserBundle:Password:show</default>
    </route>
    
    <route id="managePass_new" path="/new">
        <default key="_controller">ApplicationSonataUserBundle:Password:new</default>
    </route>

    <route id="managePass_create" path="/create" methods="POST">
        <default key="_controller">ApplicationSonataUserBundle:Password:create</default>
    </route>

    <route id="managePass_edit" path="/{id}/edit">
        <default key="_controller">ApplicationSonataUserBundle:Password:edit</default>
    </route>

    <route id="managePass_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">ApplicationSonataUserBundle:Password:update</default>
    </route>

    <route id="managePass_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">ApplicationSonataUserBundle:Password:delete</default>
    </route>

    <route id="managePass_Clone" path="/{id}/Clone" >
        <default key="_controller">ApplicationSonataUserBundle:Password:Clone</default>
    </route>
</routes>
