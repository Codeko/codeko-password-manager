<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\Sonata\UserBundle\Entity\PermisoUser">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="permisos" type="integer" column="permisos"/>
        <many-to-one field="user" target-entity="Application\Sonata\UserBundle\Entity\User" inversed-by="permisos">
            <join-column name="user_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" />
            <cascade>
                <cascade-all/>
            </cascade>
        </many-to-one>
        <many-to-one field="password" target-entity="Application\Sonata\UserBundle\Entity\Password" inversed-by="permisosUser">
            <join-column name="password_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" />
            <cascade>
                <cascade-all/>
            </cascade>
        </many-to-one>
    </entity>
</doctrine-mapping>
