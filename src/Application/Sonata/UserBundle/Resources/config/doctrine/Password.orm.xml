<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd" xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity name="Application\Sonata\UserBundle\Entity\Password">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="titulo" type="string" column="titulo" length="255"/>
        <field name="usernamePass" type="string" column="usernamePass" length="255" nullable="true"/>
        <many-to-one field="user" inversed-by="passwords" target-entity="User">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>
        <field name="url" type="string" column="url" length="255" nullable="true"/>
        <field name="password" type="string" column="password" length="255" nullable="true" />
        <field name="comentario" type="string" column="comentario" length="255" nullable="true"/>
        <field name="fechaExpira" type="datetime" column="fechaExpira" nullable="true"/>
        <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="true">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>    
        <field name="enabled"       type="boolean"    column="enabled" nullable="true" default="true" />
        <many-to-many field="category" inversed-by="passwords" target-entity="Application\Sonata\ClassificationBundle\Entity\Category">
            <join-table name="passwords_categorias">
                <join-columns>
                    <join-column name="password_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="category_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <many-to-one field="tipoPassword" inversed-by="passwords" target-entity="TipoPass">
            <join-column name="tipoPass_id" referenced-column-name="id" onDelete="SET NULL" />
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>       
        <one-to-many field="files" mapped-by="password" target-entity="Application\Sonata\MediaBundle\Entity\Media" orphanRemoval="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        <one-to-many field="permisosUser" target-entity="PermisoUser" mapped-by="password" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>  
        <one-to-many field="permisosGrupo" target-entity="PermisoGrupo" mapped-by="password">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>



  
