<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Sonata\UserBundle\Entity\User" table="fos_user_user">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <one-to-many field="passwords" target-entity="Password" mapped-by="user" />
        <one-to-many field="files" target-entity="Application\Sonata\MediaBundle\Entity\Media" mapped-by="propietario" />
        <many-to-many field="passVisibles" mapped-by="usersPermitidos" target-entity="Application\Sonata\UserBundle\Entity\Password"/>
    </entity>

</doctrine-mapping>
