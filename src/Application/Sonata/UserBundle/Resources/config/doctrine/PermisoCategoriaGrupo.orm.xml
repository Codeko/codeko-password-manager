<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\Sonata\UserBundle\Entity\PermisoCategoriaGrupo">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="permisos" type="integer" column="permisos"/>
        <many-to-one field="grupo" target-entity="Application\Sonata\UserBundle\Entity\Group" inversed-by="permisos">
            <join-column name="grupo_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
        <many-to-one field="categoria" target-entity="Application\Sonata\ClassificationBundle\Entity\Category" inversed-by="permisosGrupo">
            <join-column name="category_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
