{% for type in sonata_flashmessages_types() %}
    {% set domain = domain is defined ? domain : null %}
    {% spaceless %}
        {% for message in sonata_flashmessages_get(type, domain) %}
            <div class="alert alert-{{ type|sonata_status_class }} alert-dismissable" style="float:left; width:100%">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>        
                {{ message|raw|trans({}, 'FOSUserBundle') }}
                {% if message == 'El usuario se ha creado satisfactoriamente' %}     
                    <p>BIENVENIDO, {{app.user.username|upper}}</p>
                {% endif %}
            </div>
            <div style="clear:both">
            </div>
        {% endfor %}
    {% endspaceless %}
{% endfor %}
